@{
    Layout = null;
}
@model SignUpViewModel
<!DOCTYPE html>
<html lang="az">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        @if (TempData["ResultMessage"]!=null)
        {
            <text>
                $(document).ready(function () {
                    Swal.fire('Təbriklər!', '@TempData["ResultMessage"]', 'success');
                });
            </text>
        }
    </script>
    <style>
        body {
            background: linear-gradient(to right, #667eea, #764ba2);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-box {
            background: white;
            padding: 2rem;
            border-radius: 1rem;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease forwards;
            opacity: 0;
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
                transform: translateY(0);
            }

            from {
                opacity: 0;
                transform: translateY(-20px);
            }
        }

        .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.5);
            border-color: #667eea;
        }

        .btn-primary {
            background-color: #667eea;
            border-color: #667eea;
        }

            .btn-primary:hover {
                background-color: #5a67d8;
            }
    </style>
</head>
<body>

    <div class="register-box col-11 col-sm-8 col-md-6 col-lg-4">
        <h3 class="text-center mb-4">Qeydiyyat</h3>

        <form asp-controller="User" asp-action="SignUp" class="needs-validation" method="post">
            <!-- İstifadəçi adı -->
            <div class="mb-3">
                <label asp-for="UserName" class="form-label">İstifadəçi adı</label>
                <div class="input-group has-validation">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" asp-for="UserName" class="form-control" id="name" required>
                    <span asp-validation-for="UserName"></span>
                    <div class="invalid-feedback">Zəhmət olmasa istifadəçi adını daxil edin.</div>
                </div>
            </div>

            <!-- Telefon nömrəsi -->
            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label">Telefon nömrəsi</label>
                <div class="input-group has-validation">
                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="+994 XX XXX XX XX" required>
                    <div class="invalid-feedback">Telefon nömrəsi boş ola bilməz.</div>
                </div>
            </div>

            <!-- Email -->
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <div class="input-group has-validation">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" type="email" class="form-control" id="email" placeholder="example@mail.com" required>
                    <div class="invalid-feedback">Düzgün email daxil edin.</div>
                </div>
            </div>

            <!-- Şifrə -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Şifrə</label>
                <div class="input-group has-validation">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" id="password" required>
                    <div class="invalid-feedback">Şifrə boş ola bilməz.</div>
                </div>
            </div>

            <!-- Şifrə təkrar -->
            <div class="mb-3">
                <label asp-for="PasswordConfirm" class="form-label">Şifrə təkrar</label>
                <div class="input-group has-validation">
                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                    <input asp-for="PasswordConfirm" type="password" class="form-control" id="confirmPassword" required>
                    <div class="invalid-feedback">Şifrəni təkrar daxil edin.</div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">Qeydiyyatdan keç</button>
        </form>

        <p class="text-center mt-3">Hesabınız var? <a href="/login">Daxil olun</a></p>
    </div>

</body>
</html>
<script>
    (() => {
        'use strict';
        const forms = document.querySelectorAll('.needs-validation');
        Array.from(forms).forEach(form => {
            form.addEventListener('submit', event => {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>