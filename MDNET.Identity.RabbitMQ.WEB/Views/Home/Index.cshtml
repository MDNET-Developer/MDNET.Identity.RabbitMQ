    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <button onclick="createFile()">Fayl Yarat</button>

    <script>
        function createFile() {
            document.getElementById("createFileBtn").disabled = true;
            $('#createFileBtn').prop('disabled', true);
            $.ajax({
                type: 'POST',
                url: '/file-create',
                contentType: 'application/json',
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Uğurlu!',
                            text: response.message,
                            timer: 2500,
                            showConfirmButton: false
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Xəta',
                            text: response.message,
                            timer: 2500,
                            showConfirmButton: false
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Server Xətası',
                        text: 'Serverlə əlaqə zamanı problem yarandı.',
                        timer: 2500,
                        showConfirmButton: false
                    });
                }
            });
            setTimeout(() => {
                document.getElementById("createFileBtn").disabled = false;
            }, 2000);
           
        }
    </script>


